# soft global overrides
[[ -z "$ANDROID_HOME" && -d "<%= scope.lookupvar 'android::config::sdk_dir' %>" ]] && {
  export ANDROID_HOME=<%= scope.lookupvar 'android::config::sdk_dir' %>
}
[[ -z "$ANDROID_NDK_HOME" && -d "<%= scope.lookupvar 'android::config::ndk_dir' %>" ]] && {
  export ANDROID_NDK_HOME=<%= scope.lookupvar 'android::config::ndk_dir' %>
}